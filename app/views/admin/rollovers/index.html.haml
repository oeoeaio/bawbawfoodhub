.row
  .small-12.medium-6.columns
    %h2 Rollovers
    %h5 For #{@season.name} (#{@rollovers.count} total)
  .small-12.medium-6.columns.text-right
    = link_to "Create New", new_admin_rollover_path(season_id: @season), class: "button"


=form_tag bulk_action_admin_season_rollovers_path(@season), method: :post do |f|
  = label_tag :bulk_action
  = select_tag :bulk_action, options_for_select([["Send Rollover Email", "send"], ["Cancel Rollovers", "cancel"], ["Confirm Subscriptions", "confirm"], ['Automatically Rollover Subscriptions', 'auto-confirm']]), include_blank: true, placeholder: "Select Action"
  = submit_tag "Perform Bulk Action (on selected rollovers)", class: "button red"

  %br

  %table.fullwidth
    %tr
      %th= check_box_tag 'selectall', "", false, id: 'selectall'
      %th Given Name
      %th Surname
      %th Email
      %th Box Size
      %th Status
    - @rollovers.each do |rollover|
      %tr
        %td= check_box_tag 'rollover_ids[]', rollover.id, false, class: 'selectallable'
        %td= rollover.user.given_name
        %td= rollover.user.surname
        %td= rollover.user.email
        %td= Rollover::SIZES[rollover.box_size][:name]
        %td= rollover.status
