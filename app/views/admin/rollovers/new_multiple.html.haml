%h2 Subscriptions for #{@season.name} (#{@subscriptions.count} total)

%br

=form_tag admin_season_rollovers_create_multiple_path(@season), method: :put do |f|
  =label_tag :target_season_id, "Invite to:"
  =select_tag :target_season_id, options_from_collection_for_select(Season.where(signups_open: true), :id, :name), placeholder: "Select Season"

  %table.fullwidth
    %tr
      %th Given Name
      %th Surname
      %th Email
      %th Box Size
      %th Invite?
    - @subscriptions.each do |subscription|
      %tr
        %td= subscription.user.given_name
        %td= subscription.user.surname
        %td= subscription.user.email
        %td= Subscription::SIZES[subscription.box_size][:name]
        %td= check_box_tag 'subscription_ids[]', subscription.id, selected: true

  = submit_tag "Send Invites!", class: "button red left"

  = link_to "Cancel", admin_season_subscriptions_path(@season), class: "button right"
