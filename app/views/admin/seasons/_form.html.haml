= form_for [:admin, @season] do |f|
  .row
    .small-12.medium-6.columns
      =f.label :name
      =f.text_field :name
    .small-12.medium-6.columns
      =f.label :slug
      =f.text_field :slug
  .row
    .small-12.medium-6.columns
      =f.label :starts_on
      =f.text_field :starts_on, placeholder: "yyyy-mm-dd"
    .small-12.medium-6.columns
      =f.label :ends_on
      =f.text_field :ends_on, placeholder: "yyyy-mm-dd"
  .row
    .small-12.medium-6.columns
      =f.label :places_remaining
      =f.number_field :places_remaining
    .small-12.medium-6.columns
      =f.label :signups_open
      =f.check_box :signups_open
  .row
    .small-12.columns
      -if %w(new create).include? action_name
        = submit_tag "Create"
      -else
        = submit_tag "Update"