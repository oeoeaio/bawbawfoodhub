            %input{:name => "b_87d56e29d660188ebfd3e03ce_3bd359d80a", :tabindex => "-1", :type => "text", :value => ""}/
          %input#mc-embedded-subscribe.button.radius.expand.red{:name => "subscribe", :type => "submit", :value => "Subscribe"}/

- if cms_page('get-involved')
  .lush-panel.planting.shaded#join-the-movement
    .row
      .medium-6.show-for-medium-up.columns.text-center
        &nbsp;
      .small-12.medium-6.columns.text-center
        %h2 Join the Movement
        %p We're a passionate collective of growers, makers and eaters working to strengthen our local food economy, to support local growers and to improve access to high quality, nutritious food. We believe that the availability of local, ecologically produced food is an essential pre-condition for a happy, healthy, thriving community.
        %br
        %a.button.radius{ href: cms_page('get-involved').full_path }
          Find out more
          =icon('arrow-right')

